<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.input :tag, collection: @available_tags, input_html: { multiple: true }, include_hidden: false %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>




